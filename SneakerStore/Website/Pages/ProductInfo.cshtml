@page
@model Website.Pages.ProductInfoModel
@{
}
<link rel="stylesheet" href="~/css/ProductInfoStyleSheet.css" asp-append-version="true"/>






<form method="post" class="container">
    <div class="product-container">
        <div class="image-container">
            <img src="@Model.product.Image">
        </div>
        <div class="data-container">
            <h2>@Model.product.Name</h2>
            <h3>€ @Model.product.Price</h3>

            @*Start of sizes drop down menu*@
            <label for="shoe-sizes" class="size-label">Available EU sizes:</label>        
            <select id="shoe-sizes" name="productSize" class="sizes-dropdown">
                @foreach(string i in Model.sizes)
                {
                    <option value="@i">@i</option>
                }
            </select>
            @*End of sizes drop down menu*@

            <label class="quantity-input-label">Select Quantity:</label>
            <input type="number" id="quantity" name="productQuantity" min="1">

            @**@
            <input type="hidden" name="productId" value="@Model.product.Id">
            <input type="hidden" name="productName" value="@Model.product.Name">
            <input type="hidden" name="productPrice" value="@Model.product.Price">
            @**@

            <button type="submit" class="buy-button">
                Buy now
            </button>            
        </div>
    </div>
</form>
