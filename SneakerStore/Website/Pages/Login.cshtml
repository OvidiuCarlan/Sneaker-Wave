@page
@model Website.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/LoginStyleSheet.css" asp-append-version="true" />

<section class="container">
    <header>LOG IN</header>
    <form method="post">

        <div class="field">
            <label asp-for="customerDto.email">Email</label>
            <input asp-for="customerDto.email" type="email" placeholder="Enter Email" required>
            <span asp-validation-for="customerDto.email"></span>
        </div>
        <div class="field">
            <label asp-for="customerDto.password">Password</label>
            <input asp-for="customerDto.password" type="password" placeholder="Enter Password" required>
            <span asp-validation-for="customerDto.password"></span>
        </div>
        <div class="field">
            <span asp-validation-for="customerDto.email" class="error-message">@Model.errorMessage</span>
        </div>

        <div class="field">
            <button type="submit">Log in</button>
        </div>
        <div class="field">
            <a asp-page="Register" class="go-to-register">Sign up first</a>
        </div>

        <input type="hidden" asp-for="customerDto.firstName" value="000" />
        <input type="hidden" asp-for="customerDto.lastName" value="000" />
        <input type="hidden" asp-for="customerDto.phone" value="000" />
        <input type="hidden" asp-for="customerDto.salt" value="000" />
        
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}