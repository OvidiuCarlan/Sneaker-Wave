@page
@model Website.Pages.PaymentModel
@{
}

<link rel="stylesheet" href="~/css/PaymentStyleSheet.css" asp-append-version="true" />

<section class="container">
    <header>PAYMENT</header>

    <form method="post" class="payment-form">
        <img src="/Images/card_img.png">
        <div class="field">
            <label asp-for="cardDTO.Name"></label>
            <span asp-validation-for="cardDTO.Name"></span>
            <input type="text" placeholder="Name on card" asp-for="cardDTO.Name" required>
        </div>
        <div class="field">
            <label asp-for="cardDTO.Number"></label>
            <span asp-validation-for="cardDTO.Number"></span>
            <input type="text" placeholder="Card number" asp-for="cardDTO.Number" required>
        </div>
        <div class="field">
            <label asp-for="cardDTO.SecurityNumber"></label>
            <span asp-validation-for="cardDTO.SecurityNumber"></span>
            <input type="text" placeholder="Security Number" asp-for="cardDTO.SecurityNumber" required>
        </div>
        <div class="field">
            <label asp-for="cardDTO.ExpirationDate"></label>
            <span asp-validation-for="cardDTO.ExpirationDate"></span>
            <input type="month" placeholder="Expiration Date" asp-for="cardDTO.ExpirationDate" required>
        </div>
        <div class="field">
            <button type="submit">Finish order</button>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}